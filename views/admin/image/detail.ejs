<!DOCTYPE html>
<html lang="ko">

<head>
    <%- include("../partials/header.ejs") %>
</head>

<body class="layout-boxed remove-alt-menu">

    <%- include("../partials/loader.ejs") %>

        <%- include("../partials/nav.ejs") %>

            <!--  BEGIN MAIN CONTAINER  -->
            <div class="main-container sidebar-closed " id="container">

                <div class="overlay"></div>
                <div class="search-overlay"></div>

                <%- include("../partials/sidebar.ejs") %>

                    <!--  BEGIN CONTENT AREA  -->
                    <div id="content" class="main-content">
                        <div class="layout-px-spacing">

                            <div class="middle-content container-xxl p-0">
                                <!-- BREADCRUMB -->
                                <div class="page-meta">
                                    <nav class="breadcrumb-style-one" aria-label="breadcrumb">
                                        <ol class="breadcrumb">
                                            <li class="breadcrumb-item"><a href="admin/image">이미지 관리</a></li>
                                            <li class="breadcrumb-item active" aria-current="page">글쓰기</li>
                                        </ol>
                                    </nav>
                                </div>
                                <!-- /BREADCRUMB -->

                                <div class="row layout-spacing">
                                    <div class="col-lg-12 layout-top-spacing">
                                        <div class="col-lg-12">
                                            <!-- Post Form -->
                                            <form method="post"  <%  if(!id) { %>
                                            action ="/admin/image/add"
                                            <% } %>
                                            >
                                                <div class="statbox widget box box-shadow">
                                                    <div class="widget-header">
                                                        <div class="row">
                                                            <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                                                <h4></h4>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="widget-content widget-content-area">
                                                        <div class="form-group row mb-4">
                                                            <div class="col-lg-10 col-12 ">
                                                                <label
                                                                    class="col-sm-2 col-form-label col-form-label-sm">Id</label>
                                                            </div>
                                                            <div class="col-lg-10 col-12 ">
                                                                <input id="id" type="text" name="id"
                                                                    placeholder="" class="form-control"
                                                                    value="<%= data ? data.id: '' %>" readOnly>
                                                            </div>
                                                        </div>

                                                        <div class="form-group row mb-4">
                                                            <div class="col-lg-10 col-12 ">
                                                                <label
                                                                    class="col-sm-2 col-form-label col-form-label-sm">이미지 타입</label>
                                                            </div>
                                                            <div class="col-lg-10 col-12 ">
                                                                <input id="image_type" type="text" name="image_type"
                                                                    placeholder="" class="form-control"
                                                                     value="<%= data ? data.image_type: '' %>" required>
                                                            </div>
                                                        </div>

                                                        <div class="form-group row mb-4">
                                                            <div class="col-lg-10 col-12 ">
                                                                <label
                                                                    class="col-sm-2 col-form-label col-form-label-sm">상품 id</label>
                                                            </div>
                                                            <div class="col-lg-10 col-12 ">
                                                                <input id="product_id" type="text" name="product_id"
                                                                    placeholder="" class="form-control"
                                                                     value="<%= data ? data.product_id: '' %>" required>
                                                            </div>
                                                        </div>

                                                        <div class="form-group row mb-4">
                                                            <div class="col-lg-10 col-12 ">
                                                                <label
                                                                    class="col-sm-2 col-form-label col-form-label-sm">상담자 id</label>
                                                            </div>
                                                            <div class="col-lg-10 col-12 ">
                                                                <input id="consultant_id" type="text" name="consultant_id"
                                                                    placeholder="" class="form-control"
                                                                     value="<%= data ? data.consultant_id: '' %>" required>
                                                            </div>
                                                        </div>
                                                        <div class="form-group row mb-4">
                                                            <div class="col-lg-10 col-12 ">
                                                                <label
                                                                    class="col-sm-2 col-form-label col-form-label-sm">커뮤니티 id</label>
                                                            </div>
                                                            <div class="col-lg-10 col-12 ">
                                                                <input id="community_id" type="text" name="community_id"
                                                                    placeholder="" class="form-control"
                                                                     value="<%= data ? data.community_id: '' %>" required>
                                                            </div>
                                                        </div>
                                                        <div class="form-group row mb-4">
                                                            <div class="col-lg-10 col-12 ">
                                                                <label
                                                                    class="col-sm-2 col-form-label col-form-label-sm">제목</label>
                                                            </div>
                                                            <div class="col-lg-10 col-12 ">
                                                                <input id="title" type="text" name="title"
                                                                    placeholder="" class="form-control"
                                                                     value="<%= data ? data.title: '' %>" required>
                                                            </div>
                                                        </div>
                                                        <div class="form-group row mb-4">
                                                            <div class="col-lg-10 col-12 ">
                                                                <label
                                                                    class="col-sm-2 col-form-label col-form-label-sm">내용</label>
                                                            </div>
                                                            <div class="col-lg-10 col-12 ">
                                                                <input id="content" type="text" name="content"
                                                                    placeholder="" class="form-control"
                                                                     value="<%= data ? data.content: '' %>" required>
                                                            </div>
                                                        </div>

                                                        <div class="row layout-top-spacing">
                                                            <div class="col-xl-4 mb-xl-0 mb-2">
                                                                <h6>생성일</h6>
                                                            </div>
                                                        </div>
                                                        <div>
                                                            <p class="form-control col-xl-4 mb-xl-0 mb-2">
                                                                <%= data ? data.create_date: '' %>
                                                            </p>
                                                        </div>
                                                        <div class="row layout-top-spacing">
                                                            <div class="col-xl-4 mb-xl-0 mb-2">
                                                                <h6>변경일</h6>
                                                            </div>
                                                        </div>
                                                        <div>
                                                            <p class="form-control col-xl-4 mb-xl-0 mb-2">
                                                                <%= data ? data.update_date: '' %>
                                                            </p>
                                                        </div>
                                                        <div class="row layout-top-spacing">
                                                            <div class="col-xl-4 mb-xl-0 mb-2">
                                                                <h6>삭제일</h6>
                                                            </div>
                                                        </div>
                                                        <div>
                                                            <p class="form-control col-xl-4 mb-xl-0 mb-2">
                                                                <%= data ? data.delete_date: '' %>
                                                            </p>
                                                        </div>

                                                        <div class="row layout-top-spacing">
                                                            <div class="col-lg-6 col-12 ">
                                                                <div class="form-group">
<!--                                                                     <button -->
<!--                                                                         class="btn btn-outline-success mb-2 me-4">생성하기</button> -->
                                                                    <% if(id) { %>
                                                                     <button class="btn btn-outline-success mb-2 me-4">수정하기</button>
                                                                     <% } else { %>
                                                                     <button class="btn btn-outline-success mb-2 me-4">등록하기</button>
                                                                     <% } %>

                                                                     <% if(id) { %>
                                                                     <button class="btn btn-outline-danger mb-2 me-4"
                                                                         type="button" onclick="location.href='/admin/image/delete/<%= data ? data.id: '' %>';">삭제하기</button>
                                                                         <% } %>
                                                                     <button class="btn btn-outline-danger mb-2 me-4"
                                                                         type="button" onclick="cancel()">취소</button>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>
                                            <!-- /Post Form -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <%- include("../partials/footer.ejs") %>

                    </div>
                    <!--  END CONTENT AREA  -->
            </div>
            <!-- END MAIN CONTAINER -->

            <%- include("../partials/commonScrpits.ejs") %>

                <!-- BEGIN PAGE LEVEL PLUGINS/CUSTOM SCRIPTS -->

                <!-- BEGIN PAGE LEVEL PLUGINS/CUSTOM SCRIPTS -->
</body>

</html>