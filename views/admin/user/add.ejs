<!DOCTYPE html>
<html lang="ko">

<head>
    <%- include ("../partials/header.ejs") %>
</head>

<body class="layout-boxed remove-alt-menu">

    <%- include ("../partials/loader.ejs") %>

        <%- include ("../partials/nav.ejs") %>

            <!--  BEGIN MAIN CONTAINER  -->
            <div class="main-container sidebar-closed " id="container">

                <div class="overlay"></div>
                <div class="search-overlay"></div>

                <%- include ("../partials/sidebar.ejs") %>

                    <!--  BEGIN CONTENT AREA  -->
                    <div id="content" class="main-content">
                        <div class="layout-px-spacing">

                            <div class="middle-content container-xxl p-0">
                                <!-- BREADCRUMB -->
                                <div class="page-meta">
                                    <nav class="breadcrumb-style-one" aria-label="breadcrumb">
                                        <ol class="breadcrumb">
                                            <li class="breadcrumb-item"><a href="/review">고객 후기 관리</a></li>
                                            <li class="breadcrumb-item active" aria-current="page">글쓰기</li>
                                        </ol>
                                    </nav>
                                </div>
                                <!-- /BREADCRUMB -->

                                <div class="row layout-spacing">
                                    <div class="col-lg-12 layout-top-spacing">
                                        <div class="col-lg-12">
                                            <!-- Post Form -->
                                            <form method="post" enctype='multipart/form-data'>
                                                <div class="statbox widget box box-shadow">
                                                    <div class="widget-header">
                                                        <div class="row">
                                                            <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                                                <h4></h4>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="widget-content widget-content-area">
                                                        <div class="form-group row mb-4">
                                                            <label class="col-form-label">차량 정보 선택</label>
                                                            <div class="col-lg-10 col-12 ">
                                                                <select class="form-select" id="carInfo"
                                                                    name="carInfo_id">
                                                                    <% car.rows.forEach(function(item, index) { %>
                                                                        <option value="<%= item.carInfo_id %>">
                                                                            <%= item.maker +'-'+ item.model +'-'+
                                                                                item.detailModel +'-'+ item.yearModel %>
                                                                        </option>
                                                                        <% }); %>
                                                                </select>
                                                            </div>
                                                        </div>

                                                        <div class="form-group row mb-4">
                                                            <label class="col-form-label">처리한 협력사 선택
                                                            </label>
                                                            <div class="col-lg-10 col-12 ">
                                                                <select class="form-select" id="suppliereUsers"
                                                                    name="supplierUsers_id">
                                                                    <% supplier.rows.forEach(function(item, index) { %>
                                                                        <option value="<%= item.supplierUsers_id %>">
                                                                            <%= item.companyName +'-'+ item.mainPhoneNum
                                                                                %>
                                                                        </option>
                                                                        <% }); %>
                                                                </select>
                                                            </div>
                                                        </div>

                                                        <div class="form-group row mb-4">
                                                            <div class="col-lg-10 col-12 ">
                                                                <label
                                                                    class="col-sm-2 col-form-label col-form-label-sm">차량
                                                                    번호</label>
                                                            </div>
                                                            <div class="col-lg-10 col-12 ">
                                                                <input id="carNum" type="text" name="carNum"
                                                                    placeholder="" class="form-control" required>
                                                            </div>
                                                        </div>

                                                        <div class="form-group row mb-4">
                                                            <div class="col-lg-10 col-12 ">
                                                                <label
                                                                    class="col-sm-2 col-form-label col-form-label-sm">연락처</label>
                                                            </div>
                                                            <div class="col-lg-10 col-12 ">
                                                                <input id="phoneNum" type="text" name="phoneNum"
                                                                    placeholder="" class="form-control" required>
                                                            </div>
                                                        </div>

                                                        <div class="form-group row mb-4">
                                                            <div class="col-lg-10 col-12 ">
                                                                <label
                                                                    class="col-sm-2 col-form-label col-form-label-sm">소유자명</label>
                                                            </div>
                                                            <div class="col-lg-10 col-12 ">
                                                                <input id="clientName" type="text" name="clientName"
                                                                    placeholder="" class="form-control" required>
                                                            </div>
                                                        </div>

                                                        <div class="row">
                                                            <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                                                <h6>제목</h6>
                                                            </div>
                                                        </div>

                                                        <div class="row">
                                                            <div class="col-lg-10 col-12 ">
                                                                <div class="form-group">
                                                                    <label for="t-text"
                                                                        class="visually-hidden">Text</label>
                                                                    <input id="title" type="text" name="title"
                                                                        placeholder="" class="form-control" required>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="row layout-top-spacing">
                                                            <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                                                <h6>내용</h6>
                                                            </div>
                                                        </div>
                                                        <div id="editor-container">
                                                            <div class="col-lg-10 col-12 ">
                                                                <textarea class="form-control w-100" name="content"
                                                                    rows="15"></textarea>
                                                            </div>
                                                        </div>

                                                        <div class="form-group mb-4 layout-top-spacing">
                                                            <div class="col-lg-10 col-12 ">
                                                                <label for="exampleFormControlSelect1">평점</label>
                                                            </div>
                                                            <div class="col-lg-10 col-12 ">
                                                                <select class="form-select" id="grade" name="grade">
                                                                    <option value="1">★</option>
                                                                    <option value="2">★★</option>
                                                                    <option value="3">★★★</option>
                                                                    <option value="4">★★★★</option>
                                                                    <option value="5">★★★★★</option>
                                                                </select>
                                                            </div>
                                                        </div>

                                                        <div class="mb-3">
                                                            <div class="col-lg-10 col-12 ">
                                                                <input class="form-control file-upload-input"
                                                                    type="file" id="formFile1" name="files">
                                                            </div>
                                                        </div>

                                                        <div class="mb-3">
                                                            <div class="col-lg-10 col-12 ">
                                                                <input class="form-control file-upload-input"
                                                                    type="file" id="formFile2" name="files">
                                                            </div>
                                                        </div>

                                                        <div class="mb-3">
                                                            <div class="col-lg-10 col-12 ">
                                                                <input class="form-control file-upload-input"
                                                                    type="file" id="formFile3" name="files">
                                                            </div>
                                                        </div>

                                                        <div class="row layout-top-spacing">
                                                            <div class="col-lg-6 col-12 ">
                                                                <div class="form-group">
                                                                    <button
                                                                        class="btn btn-outline-success mb-2 me-4">저장</button>
                                                                    <button class="btn btn-outline-danger mb-2 me-4"
                                                                        type="button" onclick="cancel()">취소</button>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>
                                            <!-- /Post Form -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <%- include ("../partials/footer.ejs") %>

                    </div>
                    <!--  END CONTENT AREA  -->
            </div>
            <!-- END MAIN CONTAINER -->

            <%- include ("../partials/commonScrpits.ejs") %>

                <!-- BEGIN PAGE LEVEL PLUGINS/CUSTOM SCRIPTS -->

                <!-- BEGIN PAGE LEVEL PLUGINS/CUSTOM SCRIPTS -->
</body>

</html>