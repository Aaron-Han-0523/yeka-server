                                <div class="page-meta">
                                    <nav class="breadcrumb-style-one" aria-label="breadcrumb">
                                        <ol class="breadcrumb">
                                            <li class="breadcrumb-item"><a href="/admin/order">주문 관리</a></li>
                                            <li class="breadcrumb-item active" aria-current="page">글쓰기</li>
                                        </ol>
                                    </nav>
                                </div>
                                <!-- /BREADCRUMB -->

                                <div class="row layout-spacing">
                                    <div class="col-lg-12 layout-top-spacing">
                                        <div class="col-lg-12">
                                            <!-- Post Form -->
                                            <form method="post"  <%  if(!id) { %>
                                            action ="/admin/order/add"
                                            <% } %>
                                            >
                                                <div class="statbox widget box box-shadow">
                                                    <div class="widget-header">
                                                        <div class="row">
                                                            <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                                                <h4></h4>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="widget-content widget-content-area">
                                                        <div class="form-group row mb-4">
                                                            <div class="col-lg-10 col-12 ">
                                                                <label
                                                                    class="col-sm-2 col-form-label col-form-label-sm">Id</label>
                                                            </div>
                                                            <div class="col-lg-10 col-12 ">
                                                                <input id="id" type="text" name="id"
                                                                    placeholder="" class="form-control"
                                                                    value="<%= data ? data.id: '' %>" readOnly>
                                                            </div>
                                                        </div>

                                                        <div class="form-group row mb-4">
                                                            <div class="col-lg-10 col-12 ">
                                                                <label
                                                                    class="col-sm-2 col-form-label col-form-label-sm">사용자 이름</label>
                                                            </div>
                                                            <div class="col-lg-10 col-12 ">
                                                                <input id="orderer_name" type="text" name="orderer_name"
                                                                    placeholder="" class="form-control"
                                                                     value="<%= data ? data.orderer_name: '' %>" required>
                                                            </div>
                                                        </div>

                                                        <div class="form-group row mb-4">
                                                            <div class="col-lg-10 col-12 ">
