<!DOCTYPE html>
<html lang="ko">

<head>
  <%- include("../partials/header.ejs")%>
</head>

<body class="layout-boxed remove-alt-menu">

  <%- include("../partials/loader.ejs")%>

  <%- include("../partials/nav.ejs")%>

  <!--  BEGIN MAIN CONTAINER  -->
  <div class="main-container sidebar-closed " id="container">

    <div class="overlay"></div>
    <div class="search-overlay"></div>

    <%-include("../partials/sidebar.ejs") %>

    <!--  BEGIN CONTENT AREA  -->
    <div id="content" class="main-content">
      <div class="layout-px-spacing">

        <div class="middle-content container-xxl p-0">
          <!-- BREADCRUMB -->
          <div class="page-meta">
            <nav class="breadcrumb-style-one" aria-label="breadcrumb">
              <ol class="breadcrumb">
                <!-- <li class="breadcrumb-item"><a href="#">Table</a></li> -->
                <li class="breadcrumb-item active" aria-current="page">AI 결과 데이터 관리</li>
              </ol>
            </nav>
          </div>
          <!-- /BREADCRUMB -->

          <div class="col-12 layout-top-spacing">
            <div class="input-group">
              <input id="searchWord" type="text" class="form-control" placeholder="검색할 제목 또는 내용을 입력하세요." aria-label="Recipient's title with two button addons">
              <button class="btn btn-outline-primary" type="button" onclick="searchUser();">검색</button>
              <button class="btn btn-outline-primary" type="button" onclick="exportExcel('product_list_table','product_list_file','product_list_sheet');">엑셀
                다운로드</button>
              <button class="btn btn-outline-primary" type="button" onclick="location.href='/admin/product/add';">글쓰기</button>
            </div>
            <p id="searchCount"></p>
          </div>

          <div class="row layout-top-spacing">


            <div class="table-responsive">
              <table class="table table-hover table-bordered w-auto" id="product_list_table">
                <thead>
                  <tr>
                    <!-- <th scope="col" width="5%">
                                                        <div class="form-check form-check-primary">
                                                            <input class="form-check-input" id="custom_mixed_parent_all"
                                                                type="checkbox">
                                                        </div>
                                                    </th> -->
                    <th class="text-center" scope="col">식별번호</th>
                    <th class="text-center" scope="col">컬러명</th>
                    <th class="text-center" scope="col">패션</th>
                    <th class="text-center" scope="col">헤어</th>
                    <th class="text-center" scope="col">향수</th>
                    <th class="text-center" scope="col">메이크업 베이스</th>
                    <th class="text-center" scope="col">메이크업 아이</th>
                    <th class="text-center" scope="col">메이크업 블러셔</th>
                    <th class="text-center" scope="col">립</th>
                    <th class="text-center" scope="col">간단한 설명</th>
                    <th class="text-center" scope="col">태그</th>
                    <th class="text-center" scope="col">생성일</th>
                    <th class="text-center" scope="col">수정일</th>
                    <th class="text-center" scope="col">삭제일</th>
                    <th class="text-center" scope="col">수정/삭제</th>
                  </tr>
                  <tr aria-hidden="true" class="mt-3 d-block table-row-hidden"></tr>
                </thead>
                <%
                let data = [];
                for(let i=0; i< 10;i++){
                    data.push({
                      id: i,
                      season: i%4,
                      detail_season_type: i%5,
                      fashion: "fashion".repeat(i+1),
                      hair: "hair".repeat(i+1),
                      perfume: "perfume".repeat(i+1),
                      makeup_base: "makeup_base".repeat(i+1),
                      makeup_eye: "makeup_eye".repeat(i+1),
                      makeup_blusher: "makeup_blusher".repeat(i+1),
                      lip: "lip".repeat(i+1),
                      description: "description".repeat(i+1),
                      tag: "tag" + i,
                      create_date: new Date(),
                      update_date: new Date(),
                      delete_date: i%2 ? new Date() : null,
                    })
                }
                %>
                <tbody id="searchResults">
                  <% data.forEach( function(item, index) { %>
                  <tr onclick="location.href='/admin/personal_color/detail/<%= item.id %>';">
                    <!-- <td>
                                                                <div class="form-check form-check-primary">
                                                                    <input class="form-check-input custom_mixed_child"
                                                                        type="checkbox">
                                                                </div>
                                                            </td> -->
                    <td class="text-center">
                      <h6 class="mb-0">
                        <%= item.id %>
                      </h6>
                    </td>
                    <td class="text-center">
                      <span class="media-body align-self-center">
                        <%= codezip.season[item.season] %>
                      </span>
                    </td>
                    <td class="text-center">
                      <span class="media-body align-self-center">
                        <%= codezip.detail_season_type[item.detail_season_type] %>
                      </span>
                    </td>
                    <td class="text-center">
                      <span class="media-body align-self-center">
                        <%= myUtils.text_ellipsis(item.fashion) %>
                      </span>
                    </td>
                    <td class="text-center">
                      <span class="media-body align-self-center">
                        <%= myUtils.text_ellipsis(item.hair) %>
                      </span>
                    </td>
                    <td class="text-center">
                      <span class="media-body align-self-center">
                        <%= myUtils.text_ellipsis(item.perfume) %>
                      </span>
                    </td>
                    <td class="text-center">
                      <span class="media-body align-self-center">
                        <%= myUtils.text_ellipsis(item.makeup_base) %>
                      </span>
                    </td>
                    <td class="text-center">
                      <span class="media-body align-self-center">
                        <%= myUtils.text_ellipsis(item.makeup_eye) %>
                      </span>
                    </td>
                    <td class="text-center">
                      <span class="media-body align-self-center">
                        <%= myUtils.text_ellipsis(item.makeup_blusher) %>
                      </span>
                    </td>
                    <td class="text-center">
                      <span class="media-body align-self-center">
                        <%= myUtils.text_ellipsis(item.lip) %>
                      </span>
                    </td>
                    <td class="text-center">
                      <span class="media-body align-self-center">
                        <%= myUtils.text_ellipsis(item.description) %>
                      </span>
                    </td>
                    <td class="text-center">
                      <span class="media-body align-self-center">
                        <%= item.tag %>
                      </span>
                    </td>
                    <td class="text-center">
                      <span class="media-body align-self-center">
                        <%= myUtils.formatDateTime(item.create_date) %>
                      </span>
                    </td>
                    <td class="text-center">
                      <span class="media-body align-self-center">
                        <%= myUtils.formatDateTime(item.update_date) %>
                      </span>
                    </td>
                    <td class="text-center">
                      <span class="media-body align-self-center">
                        <%= myUtils.formatDateTime(item.delete_date) %>
                      </span>
                    </td>
                    <td class="text-center">
                      <div class="action-btns">
                        <!-- <a href="javascript:void(0);"
                                                                    class="action-btn btn-view bs-tooltip me-2"
                                                                    data-toggle="tooltip" data-placement="top"
                                                                    title="View">
                                                                    <svg xmlns="http://www.w3.org/2000/svg"
                                                                        width="24" height="24" viewBox="0 0 24 24"
                                                                        fill="none" stroke="currentColor"
                                                                        stroke-width="2" stroke-linecap="round"
                                                                        stroke-linejoin="round"
                                                                        class="feather feather-eye">
                                                                        <path
                                                                            d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z">
                                                                        </path>
                                                                        <circle cx="12" cy="12" r="3"></circle>
                                                                    </svg>
                                                                </a> -->
                        <a href="/admin/product/edit/<%= item.id %>" class="action-btn btn-edit bs-tooltip me-2" data-toggle="tooltip" data-placement="top" title="Edit">
                          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit-2">
                            <path d="M17 3a2.828 2.828 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z">
                            </path>
                          </svg>
                        </a>
                        <a onclick="delete_(event, '/admin/product/delete/<%= item.id %>');" class="action-btn btn-delete bs-tooltip" data-toggle="tooltip" data-placement="top" title="Delete">
                          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-trash-2">
                            <polyline points="3 6 5 6 21 6">
                            </polyline>
                            <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2">
                            </path>
                            <line x1="10" y1="11" x2="10" y2="17">
                            </line>
                            <line x1="14" y1="11" x2="14" y2="17">
                            </line>
                          </svg>
                        </a>
                      </div>
                    </td>
                  </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>

          </div>

        </div>

      </div>

      <%- include("../partials/footer.ejs") %>

    </div>
    <!--  END CONTENT AREA  -->
  </div>
  <!-- END MAIN CONTAINER -->

  <%- include("../partials/commonScrpits.ejs") %>

  <!-- BEGIN PAGE LEVEL PLUGINS/CUSTOM SCRIPTS -->
  <script>
    async function searchUser() {
      const target_id = "searchResults";
      const searchWord_element = document.getElementById('searchWord');
      const searchWord = searchWord_element.value;

      const res = await fetch(`/product/search?q=${searchWord}`)
        .then((response) => {
          // console.log(response.json());
          return response.json();
        })
      // .catch((err) => { console.error(err) });

      const user = res.user;
      const result = res.data;

      // console.log(result);
      document.getElementById('searchCount').innerText = `${searchWord} 검색결과 ${result.count}개`;
      searchWord_element.value = '';

      let tempHTML = ''
      for (let i = 0; i < result.count; i++) {
        tempHTML += `
                                <tr onclick="location.href='/product/${result.rows[i].id}';">
                                    <td class="text-center">
                                        <div class="media">
                                            <!-- <div class="avatar me-2">
                                <img alt="avatar" src="../src/assets/img/profile-7.jpeg"
                                    class="rounded-circle" />
                            </div> -->
                                            <div class="media-body align-self-center">
                                                <span class="media-body align-self-center">
                                                    ${result.rows[i].id}
                                                </span>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <span class="media-body align-self-center">
                                            ${result.rows[i].carNum.slice(0, -2) + "**"}
                                        </span>
                                    </td>
                                    <td>
                                        <h6 class="mb-0"><a>
                                            ${result.rows[i].title}
                                            </a></h6>
                                    </td>
                                    <td class="text-center">
                                        <span class="media-body align-self-center">
                                            ${result.rows[i].phoneNum.slice(0, -4) + "****"}
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <span class="media-body align-self-center">
                                            ${result.rows[i].clientName[0] + '*' +
                                result.rows[i].clientName.slice(2)}
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <span class="media-body align-self-center">
                                            ${formatDate(result.rows[i].createDate)}
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <span class="media-body align-self-center">
                                            ${result.rows[i].updateUser ? result.rows[i].updateUser : ''}
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <span class="media-body align-self-center">
                                            ${result.rows[i].updateDate ? formatDate(result.rows[i].updateDate) : ''}
                                        </span>
                                    </td>
                                    <td class="text-center">
                                    <label hidden>
                                        ${result.rows[i].grade}
                                    </label>`

        for (let j = 0; j < result.rows[i].grade; j++) {
          tempHTML += `<span
                                            class="media-body align-self-center"><svg
                                                xmlns="http://www.w3.org/2000/svg"
                                                width="24" height="24" viewBox="0 0 24 24"
                                                fill="none" stroke="currentColor"
                                                stroke-width="2" stroke-linecap="round"
                                                stroke-linejoin="round"
                                                class="feather feather-star">
                                                <polygon
                                                    points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2">
                                                </polygon>
                                            </svg></span>`
        }

        tempHTML += `</td>`

        tempHTML += `
                                <td class="text-center">
                                    <div class="action-btns">
                                    <a href="/admin/product/edit/${result.rows[i].id}"
                                    class="action-btn btn-edit bs-tooltip me-2"
                                    data-toggle="tooltip" data-placement="top"
                                    title="Edit">
                                    <svg xmlns="http://www.w3.org/2000/svg"
                                        width="24" height="24"
                                        viewBox="0 0 24 24" fill="none"
                                        stroke="currentColor" stroke-width="2"
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        class="feather feather-edit-2">
                                        <path
                                            d="M17 3a2.828 2.828 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z">
                                        </path>
                                    </svg>
                                </a>`

        tempHTML += `<a onclick="delete_(event, '/admin/product/delete/${result.rows[i].id}');"
                                        class="action-btn btn-delete bs-tooltip"
                                        data-toggle="tooltip"
                                        data-placement="top" title="Delete">
                                        <svg xmlns="http://www.w3.org/2000/svg"
                                            width="24" height="24"
                                            viewBox="0 0 24 24" fill="none"
                                            stroke="currentColor"
                                            stroke-width="2"
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            class="feather feather-trash-2">
                                            <polyline points="3 6 5 6 21 6">
                                            </polyline>
                                            <path
                                                d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2">
                                            </path>
                                            <line x1="10" y1="11" x2="10"
                                                y2="17">
                                            </line>
                                            <line x1="14" y1="11" x2="14"
                                                y2="17">
                                            </line>
                                        </svg>
                                    </a>`
        tempHTML += `</td >
                                </tr >`
      }

      document.getElementById(target_id).innerHTML = tempHTML;
    }
  </script>
  <!-- BEGIN PAGE LEVEL PLUGINS/CUSTOM SCRIPTS -->
</body>

</html>